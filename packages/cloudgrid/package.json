{
  "name": "@convadraw/cloudgrid",
  "version": "1.0.9",
  "description": "High-performance infinite canvas library for React with WebAssembly-powered rendering. Handle 2000+ media items at 60 FPS.",
  "keywords": [
    "react",
    "canvas",
    "infinite-canvas",
    "webassembly",
    "wasm",
    "konva",
    "image-gallery",
    "design-tool",
    "whiteboard",
    "performance"
  ],
  "homepage": "https://github.com/Rhitottam/convadraw#readme",
  "repository": {
    "type": "git",
    "url": "https://github.com/Rhitottam/convadraw.git",
    "directory": "packages/cloudgrid"
  },
  "bugs": {
    "url": "https://github.com/Rhitottam/convadraw/issues"
  },
  "license": "MIT",
  "author": {
    "name": "CloudGrid Team",
    "email": "support@cloudgrid.dev"
  },
  "type": "module",
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "style": "./dist/cloudgrid.css",
  "exports": {
    ".": {
      "import": {
        "types": "./dist/index.d.ts",
        "default": "./dist/index.js"
      },
      "require": {
        "types": "./dist/index.d.cts",
        "default": "./dist/index.cjs"
      }
    },
    "./cloudgrid.css": "./dist/cloudgrid.css",
    "./dist/cloudgrid.css": "./dist/cloudgrid.css"
  },
  "files": [
    "dist",
    "README.md"
  ],
  "sideEffects": [
    "*.css"
  ],
  "scripts": {
    "build": "tsup && npm run build:css",
    "build:css": "postcss ./src/cloudgrid.css -o ./dist/cloudgrid.css --minify",
    "dev": "tsup --watch",
    "clean": "rm -rf dist",
    "lint": "eslint src/",
    "typecheck": "tsc --noEmit"
  },
  "peerDependencies": {
    "react": "^18.0.0 || ^19.0.0",
    "react-dom": "^18.0.0 || ^19.0.0"
  },
  "dependencies": {
    "@convadraw/editor": "*",
    "@convadraw/primitives": "*",
    "@convadraw/state": "*",
    "@convadraw/wasm": "*",
    "konva": "^9.0.0",
    "phosphor-react": "^1.4.1",
    "react-konva": "^18.0.0"
  },
  "devDependencies": {
    "@tailwindcss/postcss": "^4.1.18",
    "@types/react": "^18.2.0",
    "@types/react-dom": "^18.2.0",
    "autoprefixer": "^10.4.23",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "postcss": "^8.5.6",
    "postcss-cli": "^11.0.1",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "tailwind-merge": "^3.4.0",
    "tailwindcss": "^4.1.18",
    "tsup": "^8.0.0",
    "typescript": "^5.3.0"
  }
}
